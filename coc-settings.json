{
	"coc.preferences.formatOnSaveFiletypes": [
		"go",
		"c",
		"json",
		"cpp",
		"objc",
		"objcpp",
		"js",
		"ts"
	],
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"snippets.loadFromExtensions": true,
	//"snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
	"snippets.ultisnips.directories": [
		"UltiSnips",
		"gosnippets/UltiSnips",
		"custom-snippets"
	],
	"coc.preferences.snippets.enable": true,
	"snippets.ultisnips.usePythonx": true,
	"snippets.ultisnips.pythonVersion": 3,
	"go.enable": true,
	"json.enable": true,
	"go.goplsOptions": {
		"completeUnimported": true,
		"matcher": "Fuzzy"
	},
	"go.goplsUseDaemon": true,
	"go.trace.server": "verbose"
}
